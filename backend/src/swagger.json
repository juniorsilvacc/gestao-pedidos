{
  "openapi": "3.0.0",
  "info": {
    "title": "Gestão de Pedidos - Documentation",
    "description": "This is an API",
    "version": "2.0.0",
    "contact": {
      "email": "juniorsilvafullstack@gmail.com"
    }
  },
  "paths": {
    "/api/users/register/admin": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a user admin",
        "description": "Create a user admin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "admin",
                  "email": "admin@admin.com",
                  "cpf": "123123123123",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Esse usuário já existe"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Authentication user",
        "description": "Authentication user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "juniorsilva@hotmail.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Email e/ou senha incorreto"
          }
        }
      }
    },
    "/api/categories/create": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a category",
        "description": "Create a category",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Example Name",
                  "description": "Example Description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Essa categoria já existe"
          }
        }
      }
    },
    "/api/categories/list":{
      "get": {
        "tags": ["Category"],
        "summary": "List all categories",
        "description": "Returns all categories",
        "security": [
          { "bearerAuth": []}
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/categories/update/{id}": {
      "put": {
        "tags": ["Category"],
        "summary": "Update a category",
        "description": "Update data a category",
        "security": [
          { "bearerAuth": []}
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the category",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "example": {
                  "name": "Category name sample update",
                  "description": "Category category sample update"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Categoria existente"
          },
          "404": {
            "description": "Categoria não encontrada"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/categories/remove": {
      "delete": {
        "tags": ["Category"],
        "summary": "Delete a category",
        "description": "Delete a category",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the category",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      },
      "responses": {
        "204": {
          "description": "No Content"
        },
        "404": {
          "description": "Categoria não encontrada"
        },
        "500": {
          "description": "Internal server error"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "description": "Autenticação utilizando JWT",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
