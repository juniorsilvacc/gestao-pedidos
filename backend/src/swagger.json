{
  "openapi": "3.0.0",
  "info": {
    "title": "Gestão de Pedidos - Documentation",
    "description": "This is an API",
    "version": "2.0.0",
    "contact": {
      "email": "juniorsilvafullstack@gmail.com"
    }
  },
  "paths": {
    "/api/users/register/admin": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a user admin",
        "description": "Create a user admin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "admin",
                  "email": "admin@admin.com",
                  "cpf": "123123123123",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Esse usuário já existe"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Authentication user",
        "description": "Authentication user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "juniorsilva@hotmail.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Email e/ou senha incorreto"
          }
        }
      }
    },
    "/api/categories/create": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a category",
        "description": "Create a category",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Example Name",
                  "description": "Example Description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Essa categoria já existe"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "description": "Autenticação utilizando JWT",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
